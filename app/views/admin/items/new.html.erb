<div class="mb-5 text-center">
  <h1>商品新規登録</h1>
</div>

<div class="flex flex-wrap justify-center">
<%= form_with model: Item.new do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>

  <h4>税抜き価格</h4>
  <%= f.number_field :price %>

  <h4>販売ステータス</h4>
  

  <%= f.submit '新規登録' ,class:"btn btn-success" %>
<% end %>