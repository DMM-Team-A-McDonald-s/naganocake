<div>
  <%= flash[:notice] %>
</div>
  
<div class="mb-5 text-center">
  <h1>商品詳細ページ</h1>
</div>

<table class='table'>
  <tr><%= image_tag @item.image, alt: "商品画像", size:'100x100' %></tr>
  <tr>
	  <th>商品名</th>
	  <td><%= @item.name %></td>
  </tr>
  <tr>
	  <th>商品説明</th>
	  <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
<%# <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格(税抜価格)</th>
    <td><%= @item.tax_included_price %>円 (<%= @item.price %>円)</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td><%= @item.status_label %></td>
  </tr>
</table>

<div class="text-center">
  <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
</div>
