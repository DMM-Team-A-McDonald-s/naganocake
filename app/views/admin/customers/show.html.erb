<div class="mt-3 mb-5 ml-3 text-left">
  <h2><%= "#{@customer.last_name} #{@customer.first_name}" %>さんの会員詳細</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-10">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_active ?
            content_tag(:span, '有効', class: 'text-success font-weight-bold') :
            content_tag(:span, '退会', class: 'text-secondary font-weight-bold')
            %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="text-center mb-5">
<%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mr-3" %>
<%= link_to "注文履歴一覧を見る", orders_path(customer_id: @customer.id), class: "btn btn-primary" %>
</div>
