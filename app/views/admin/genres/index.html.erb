<div class="mb-5 text-center">
  <h1>ジャンル一覧・追加</h1>
</div>

<%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit '新規登録' ,class:"btn btn-success" %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ジャンル</th>
      <th colspan"3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>