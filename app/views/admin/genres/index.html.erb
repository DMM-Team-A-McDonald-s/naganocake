<div>
  <%= render "admin/shared/error_messages", resource: @genre %>
</div>

<div class="mt-3 mb-5 ml-3 text-left">
  <h2>ジャンル一覧・追加</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-7">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <table class="table table-borderless mb-5">
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name, placeholder: "ジャンル名" %></td>
            <td><%= f.submit '新規登録' ,class:"btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  
  <div class="col-6">
    <table class="table">
      <thead>
        <tr class="table-secondary">
          <th scope="col">ジャンル</th>
          <th colspan"3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>