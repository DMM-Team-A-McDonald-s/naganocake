<div>
  <%= render "admin/shared/error_messages", resource: @genre %>
</div>

<div class="mt-3 mb-5 ml-3 text-left">
  <h2>ジャンル編集</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
        <table class="table table-borderless mb-5">
          <tr>
            <td><%= f.label :name, "ジャンル名" %></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更を保存' ,class:"btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>