<div class="mt-3 mb-5 ml-3 text-left">
  <h2>配送先編集</h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-10">
    <%= form_with model: @address, url: address_path(@address), local: true do |f| %>
      <div class="form-group">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "form-label" %>
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address, "住所", class: "form-label" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name, "宛名", class: "form-label" %>
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
      </div>
      <div class="form-group text-right">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
