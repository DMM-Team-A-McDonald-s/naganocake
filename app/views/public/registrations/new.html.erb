<div>
  <%= flash[:notice] %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="container">
  <div class="row">
    <div class="col">
      <div style="margin: 2% 5% 2% 5%;">
        <h4>
          <span class="bg-light">新規会員登録</span>
        </h4>
      </div>

      <div class="row mb-2">
        <div class="col-3 d-flex justify-content-between pr-1 field" style="height: 30px;">
          <p>名前</p>
          <%= f.label :last_name, "(姓)　" %>
        </div>

        <div class="col-4 px-0" style="height: 30px;">
          <%= f.text_field :last_name, autofocus: true, size:30 %>
        </div>

        <div class="col-4 pl-0" style="height: 30px;">
          <%= f.label :first_name, "(名)　" %>
          <%= f.text_field :first_name, size: 30 %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-3 d-flex justify-content-between pr-1 field" style="height: 30px;">
          <p>フリガナ<p>
          <%= f.label :last_name_kana, "(セイ)" %>
        </div>

        <div class="col-4 px-0" style="height: 30px;">
          <%= f.text_field :last_name_kana, size: 30 %>
        </div>

        <div class="col-4 pl-0" style="height: 30px;">
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, size: 30 %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-3 align-items-center">
         <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-4 pl-0 align-items-center">
          <%= f.email_field :email, autocomplete: "email", size: 30 %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-3 field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-4 pl-0">
          <%= f.text_field :postal_code, size: 30 %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-3 field">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-8 pl-0">
          <%= f.text_field :address, size:89 %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-3 field">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        </div>
        <div class="col-4 pl-0">
          <%= f.text_field :telephone_number, size: 30 %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col-3 field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
          <% end %>
        </div>
        <div class="col-4 pl-0">
          <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-3 field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
        </div>
        <div class="col-4 pl-0">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-3"></div>
        <div class="col-2 pl-0 actions">
          <%= f.submit "新規登録", class:"btn btn-success w-100" %>
        </div>
      </div>
      <div style="margin: 0 0 0 5%;">
        <h4>既に登録済みの方</h4>
      </div>
      <div style="margin: 0 0 10px 10%;">
        <%= render "public/shared/links" %>からログインしてください
      </div>
    </div>
  </div>
</div>
<% end %>


