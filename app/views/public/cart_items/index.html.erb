<div class="d-flex justify-content-between">
  ショッピングカート
  <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
</div>

<table class="table table-bordered">
  <thead class="table-secondary">
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価(税込)</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <th scope="row"><%= cart_item.item.name %> </th>
      <td>
        <%= cart_item.item.with_tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= form_with model: cart_item, url:  cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
        <%# <%= cart_item.amount %>  
        <%= f.select :amount, options_for_select((1..100).to_a), { include_blank: "#{cart_item.amount}" }, class: "form-select" %> 
        <%= f.submit "変更", class: "btn btn-success ml-5" %>
        <% end %>
      </td> 
      <td>
        <%= cart_item.subtotal.to_s(:delimited) %>
      </td>
      <td>
        <%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
    <% @main_total += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>
<%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %>
<table>
  <tr>
    <th>
      合計金額
    </th>
    <td>
      <%= @main_total.to_s(:delimited) %>
    </td>
  </tr>
</table>

