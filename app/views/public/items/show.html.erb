<div>
  <%= image_tag @item.image, alt: "商品画像", size:'150x150' %>
</div>

<table class='table'>
  <tr>
	  <td><%= @item.name %></td>
  </tr>
  <tr>
	  <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>￥<%= @item.tax_included_price %>(税込)</td>
  </tr>
</table>

  <%= form_with model: @item, local: true do |f| %>
    <div class="form-group">
      <%= f.label :quantity, "個数" %>
      <%= f.number_field :quantity, value: 1, min: 1, max: 100 %> <!-- 最小1、最大100個まで -->
    </div>
    <div class="form-group">
      <%= f.submit "カートに入れる", class: "btn btn-success" %>
    </div>
  <% end %>
  
